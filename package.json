{
  "name": "mongoose-utility-kit",
  "version": "0.0.1",
  "description": "A set of utility functions for the Mongoose library",
  "keywords": [
    "mongoose",
    "helpers",
    "utilities",
    "typescript",
    "populated"
  ],
  "main": "dist/index.js",
  "type": "module",
  "repository": "git@github.com:nikzanda/mongoose-utility-kit.git",
  "author": "Nicol√≤ Zandarin <nikzanda@hotmail.it>",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "tsup",
    "check-exports": "attw --pack .",
    "lint": "eslint --fix . --ext .ts",
    "ci": "yarn build && yarn check-exports && yarn lint && yarn test",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "yarn ci"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@changesets/cli": "^2.28.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": ">=8",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "mongoose": ">=8"
  }
}
